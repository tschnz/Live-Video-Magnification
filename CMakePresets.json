{
    "version": 10,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "vcpkg-base",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${env:VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "prebuild-base",
            "hidden": true,
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": "${env:OpenCV_DIR};${env:Qt6_DIR}",
                "OpenCV_DIR": "${env:OpenCV_DIR}",
                "Qt6_DIR": "${env:Qt6_DIR}"
            }
        },
        {
            "name": "msvc-vcpkg",
            "displayName": "MSVC (vcpkg static)",
            "inherits": "vcpkg-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "BUILD_STATIC": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            }
        },
        {
            "name": "msvc-prebuild",
            "displayName": "MSVC (prebuild dynamic OpenCV & Qt6)",
            "inherits": "prebuild-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "BUILD_STATIC": "OFF",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-vcpkg-debug",
            "configurePreset": "msvc-vcpkg",
            "displayName": "Debug (MSVC with vcpkg)",
            "configuration": "Debug"
        },
        {
            "name": "msvc-vcpkg-release",
            "configurePreset": "msvc-vcpkg",
            "displayName": "Release (MSVC with vcpkg)",
            "configuration": "Release"
        },
        {
            "name": "msvc-prebuild-debug",
            "configurePreset": "msvc-prebuild",
            "displayName": "Debug (MSVC with prebuild OpenCV & Qt6)",
            "configuration": "Debug"
        },
        {
            "name": "msvc-prebuild-release",
            "configurePreset": "msvc-prebuild",
            "displayName": "Release (MSVC with prebuild OpenCV & Qt6)",
            "configuration": "Release"
        }
    ]
}